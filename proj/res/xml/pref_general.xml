<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_enable_service"
        android:summary="@string/pref_enable_service_desc"
        android:title="@string/pref_enable_service" />
    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="3000"
        android:entries="@array/pref_list_timeout"
        android:entryValues="@array/pref_list_timeout_values"
        android:key="pref_timeout_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_timeout_title" />
    
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_enable_auto_screen_on"
        android:summary="@string/pref_enable_auto_screen_on_desc"
        android:title="@string/pref_enable_auto_screen_on" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="pref_enable_auto_screen_off"
        android:summary="@string/pref_enable_auto_screen_off_desc"
        android:title="@string/pref_enable_auto_screen_off" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
